" Switch off all auto-indenting
set nocindent
set nosmartindent
set noautoindent
set indentexpr=
filetype indent off
filetype plugin indent off

" make tab = 2 spaces
set tabstop=2
set expandtab
set shiftwidth=2

" force UTF8
set encoding=utf-8

" enable syntax highlighting
syntax on

" enable colors for dack backgrounds
set background=dark

" show end of line, tab etc
set list
set listchars=eol:¬,tab:▸·,trail:·
